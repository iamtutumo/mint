# ====================================
# Mercury Commerce - Environment Variables
# ====================================
# Copy this file to .env and update the values

# =======================
# Application Settings
# =======================
PROJECT_NAME="Mercury Commerce"
ENVIRONMENT=development
DEBUG=true
API_PREFIX=/api/v1

# =======================
# Server Configuration
# =======================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# =======================
# Database (PostgreSQL)
# =======================
POSTGRES_SERVER=db
POSTGRES_USER=mercury
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=mercury_commerce
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}:${POSTGRES_PORT}/${POSTGRES_DB}

# =======================
# Authentication
# =======================
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
ALGORITHM=HS256

# Superuser Configuration
OWNER_PHONE_NUMBERS=+256700000000
SUPERUSER_PASSWORD=your-strong-password

# =======================
# Storage (MinIO)
# =======================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=your_minio_access
MINIO_SECRET_KEY=your_minio_secret
MINIO_BUCKET_NAME=mercury-documents
MINIO_SECURE=false
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# =======================
# Vector Database (Qdrant)
# =======================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key

# =======================
# AI/ML Services
# =======================
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# =======================
# WhatsApp Integration
# =======================
WHATSAPP_API_URL=https://api.whatsapp.com/v1
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_WEBHOOK_SECRET=your_webhook_secret
WHATSAPP_WEBHOOK_URL=${HOST}:${PORT}/webhook/whatsapp

# Evolution API
EVOLUTION_API_URL=http://evolution:8080
EVOLUTION_API_KEY=your_evolution_api_key
EVOLUTION_INSTANCE=mercury-bot

# =======================
# Google Services
# =======================
GOOGLE_CALENDAR_CREDENTIALS_JSON=/app/credentials.json
GOOGLE_CALENDAR_ID=your-calendar-id@group.calendar.google.com

# =======================
# n8n Integration
# =======================
N8N_WEBHOOK_URL=http://n8n:5678/webhook

# =======================
# Security
# =======================
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "PATCH"]
ALLOWED_HEADERS=["*"]
CORS_CREDENTIALS=true

# =======================
# Order Management
# =======================
ORDER_EXPIRY_HOURS=24

# =======================
# Document Settings
# =======================
PDF_PASSWORD_PROTECTION=true
PDF_DEFAULT_PASSWORD=

# =======================
# Frontend Configuration
# =======================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
NEXT_PUBLIC_WHATSAPP_NUMBER=+1234567890

# =======================
# Logging
# =======================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =======================
# Rate Limiting
# =======================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900  # 15 minutes in seconds
